@model EntityLayer.Concrete.Arge

@{
    ViewData["Title"] = "EditArge";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Arge Düzenleme Sayfası</h3>
</div>
<br />

<form asp-action="EditArge" method="post">
    <input type="hidden" asp-for="ArgeID" />
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description1" class="control-label"></label>
        <input asp-for="Description1" class="form-control" />
        <span asp-validation-for="Description1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description2" class="control-label"></label>
        <input asp-for="Description2" class="form-control" />
        <span asp-validation-for="Description2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label"></label>
        <textarea asp-for="ImageUrl" class="form-control"></textarea>
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description3" class="control-label"></label>
        <input asp-for="Description3" class="form-control" />
        <span asp-validation-for="Description3" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description4" class="control-label"></label>
        <input asp-for="Description4" class="form-control" />
        <span asp-validation-for="Description4" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name2" class="control-label"></label>
        <input asp-for="Name2" class="form-control" />
        <span asp-validation-for="Name2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
</form>
