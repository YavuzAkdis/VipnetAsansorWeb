@* Category Listeleme Sayfası Tasarımı *@

@using EntityLayer.Concrete
@model List<Category>



@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Kategori Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Url</th>
                <th scope="col" class="sort" data-sort="budget">Name</th>
                <th scope="col" class="sort" data-sort="status">Title</th>
                <th scope="col" class="sort" data-sort="completion">Description</th>
                <th scope="col" class="sort" data-sort="completion">ImageUrl</th>
              
                <th scope="col">Sil</th>
                <th scope="col">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.CategoryId
                    </td>
                    <td>
                        @item.Url
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Title
                    </td>

                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.ImageUrl
                    </td>
                   
                    <td>
                        <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
                    </td>
                    <td>
                        <a href="/Category/EditCategory/@item.CategoryId" class="btn btn-warning">Düzenle</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>

    <a href="/Category/AddCategory" class="btn btn-primary">Yeni Kategori Ekle </a>
</div>

