

@* İletşim Listeleme Sayfası Tasarımı *@

@using EntityLayer.Concrete
@model List<Contact>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .fixed-table th, .fixed-table td {
        word-wrap: break-word; /* Uzun kelimeleri bölerek satır atlamasını sağlar */
        white-space: normal; /* Metnin birden fazla satıra yayılmasını sağlar */
        max-width: 300px; /* Description hücresinin maksimum genişliği */
    }
</style>

<div class="card-header border-0">
    <h3 class="mb-0">İletşim Sayfası</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush fixed-table">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Phone</th>
                <th scope="col" class="sort" data-sort="status">Title</th>
                
                <th scope="col" class="sort" data-sort="status">Mail</th>
                <th scope="col" class="sort" data-sort="status">Address</th>
                <th scope="col" class="sort" data-sort="status">Description</th>
                <th scope="col" class="sort" data-sort="status">Maps</th>
                <th scope="col">Sil</th>
                <th scope="col">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ContactID
                    </td>
                    <td>
                        @item.Phone
                    </td>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.Mail
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.Maps
                    </td>
                  
                    <td>
                        <a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger">Sil</a>
                    </td>
                    <td>
                        <a href="/Contact/EditContact/@item.ContactID" class="btn btn-warning">Düzenle</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>

    <a href="/Contact/AddContact" class="btn btn-primary">Yeni İletşim Bilgisi Ekle </a>
</div>

