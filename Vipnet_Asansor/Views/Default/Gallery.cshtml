@* KULLANICI TARAFI İLETİŞİM SAYFASI *@

@using Microsoft.Extensions.Localization @* Çoklu Dil *@

@inject IStringLocalizer<BusinessLayer.Resource.StringResource> Localizer

@using System.Globalization
@{
    // Kültür bilgisini al
    var cultureInfo = CultureInfo.CurrentCulture.Parent;
    // Ülke kodunu büyük harfe çevir
    var countryCode = cultureInfo.Name.ToUpper();
}


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <title>@Localizer["Gallery"] - Vipnet Asansor</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/vipnet-asansor/img/Vip_Asansor_Logo2.png" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Ubuntu:wght@500;700&display=swap"
          rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">




    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.css" />
    <!-- Libraries Stylesheet -->
    <link href="~/vipnet-asansor/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/vipnet-asansor/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <!-- Lightbox2 CSS -->
    <link href="~/vipnet-asansor/css/lightbox.min.css" rel="stylesheet" />
    <link href="~/css/lightbox.min.css" rel="stylesheet" />
    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/vipnet-asansor/css/bootstrap.min.css" rel="stylesheet">


    <link rel="modulepreload" href="https://panorama-slider.uiinitiative.com/assets/vendor.dba6b2d2.js" rel="stylesheet" />
    <link rel="stylesheet" href="https://panorama-slider.uiinitiative.com/assets/index.c1d53924.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="~/vipnet-asansor/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner"
         class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->


    <div class="container">
        @await Component.InvokeAsync("TopbarList")
    </div>


    <!-- Navbar Start -->
    <div class="container-fluid sticky-top ">
        <div class="container">

            <nav class="navbar navbar-expand-lg navbar-dark p-0 ">
                <a href="/" class="navbar-brand">
                    <img src="~/vipnet-asansor/img/Vip_Asansor_Beyaz.png" alt="">
                </a>
                <button type="button" class="navbar-toggler ms-auto me-0" data-bs-toggle="collapse"
                        data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto">
                        <a href="/" class="nav-item nav-link ">@Localizer["Home"]</a>
                        <a href="/@Localizer["about_"]" class="nav-item nav-link">@Localizer["About"]</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">@Localizer["Products"]</a>
                            <div class="dropdown-menu bg-light mt-2">
                                @await Component.InvokeAsync("ProductNavbar", ViewBag.Language)
                            </div>
                        </div>
                        <a href="/@Localizer["arge_"]" class="nav-item nav-link">@Localizer["ArGe"]</a>
                        <a href="/@Localizer["gallery_"]" class="nav-item nav-link active">@Localizer["Gallery"]</a>
                        <a href="/@Localizer["contact_"]" class="nav-item nav-link ">@Localizer["Contact"]</a>
                    </div>


                    <!-- Example single danger button -->
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            @countryCode
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Language/SetLanguage?lang=tr-TR">TR</a></li>
                            <li><a class="dropdown-item" href="/Language/SetLanguage?lang=en-US">EN</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>


    <!-- Hero Start -->
    <div class="container-fluid pt-5 bg-primary gallery-header">
        <div class="content container pt-5">
            <div class="row g-5 pt-5">
                <div class="col-lg-6 align-self-center text-center text-lg-start mb-lg-5">
                    <h3 class="text-white mb-4 animated slideInRight">@Localizer["Gallery"]</h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center justify-content-lg-start mb-0">
                            <li class="breadcrumb-item"><a class="text-white" href="/">@Localizer["Home"]</a></li>

                            <li class="breadcrumb-item text-white active" aria-current="page">@Localizer["Gallery"]</li>
                        </ol>
                    </nav>
                </div>

                <div class="col-lg-6 align-self-end text-center text-lg-end">
                    <img class="img-fluid" src="~/vipnet-asansor/img/hero-img.png" alt="" style="max-height: 300px;">
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->
    <section id="gallery" class="gallery-area pt-110 pb-120 py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-9">
                    <div class="gallery-title text-center">
                        <h3 class="mb-2">@Localizer["Gallery"]</h3>
                        <div class="border-bottom"></div>
                    </div>
                </div>
            </div>
            <div class="gallerycontainer">


                @await Component.InvokeAsync("GalleryList", ViewBag.Language)

              
            </div><!-- row -->
            <!-- row -->
        </div> <!-- container -->
    </section>


  


    <!-- Footer Start -->
    <div class="container-fluid bg-primary text-white-50 footer">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.1s">
                    <a href="/" class="d-inline-block mb-3">
                        <img class="w-75" src="~/vipnet-asansor/img/Vip_Asansor_Beyaz.png" alt="">
                    </a>
                    <p class="mb-0">Endüstriyel Elektrik Elektronik San. ve Tic. A.Ş</p>
                </div>
                <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.3s">
                    <h5 class="text-white mb-4">Menü</h5>
                    <div class="ms-0 border-bottom"></div>
                    <a class="btn btn-link" href="/">@Localizer["Home"]</a>
                    <a class="btn btn-link" href="/@Localizer["about_"]">@Localizer["About"]</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="btn btn-link dropdown-toggle" data-bs-toggle="dropdown">@Localizer["Products"]</a>
                        <div class="dropdown-menu bg-light mt-2">
                            @await Component.InvokeAsync("ProductNavbar", ViewBag.Language)
                        </div>
                    </div>
                    <a class="btn btn-link" href="/@Localizer["arge_"]">@Localizer["ArGe"]</a>
                    <a class="btn btn-link" href="/@Localizer["gallery_"]">@Localizer["Gallery"]</a>

                    <a class="btn btn-link" href="/@Localizer["contact_"]">@Localizer["Contact"]</a>


                </div>
                <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.5s">
                    <h5 class="text-white mb-4">@Localizer["Contact"]</h5>
                    <div class="ms-0 border-bottom"></div>
                    <p><i class="fa fa-map-marker-alt me-3"></i>3. Organize Sanayi Bölgesi Evrenköy Caddesi 3. Sokak No:5 Selçuklu / Konya - TÜRKİYE</p>
                    <p><i class="fa fa-phone-alt me-3"></i>+90 332 239 09 00</p>
                    <p><i class="fa fa-envelope me-3"></i>info@vipnetasansor.com</p>
                    <div class="d-flex pt-2">

                        @await Component.InvokeAsync("SocialMediaList")
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.7s">
                    <h5 class="text-white mb-4">@Localizer["GoogleMaps"]</h5>
                    <div class="ms-0 border-bottom"></div>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d393.1858623299959!2d32.623358!3d37.965765!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d09388a162e307%3A0x7f45e6d34bcaad49!2sEnd%C3%BCstriyel%20Elektrik!5e0!3m2!1str!2str!4v1717738508204!5m2!1str!2str"
                            width="300" height="200" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>

        <div class="container wow fadeIn" data-wow-delay="0.1s">
            <div class="copyright">
                <div class="row">
                    <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                        &copy;  @DateTime.Now.Year. Vipnet Asansör @Localizer["AllRightsReserved"]
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <!-- Buraya diğer içeriklerinizi ekleyebilirsiniz -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-outline-primary btn-lg-square back-to-top pt-2"><i class="bi bi-arrow-up"></i></a>


    @* Chat BAğlantısı *@
    <script src="//code.jivosite.com/widget/7X9Wf1gzvv" async></script>

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/vipnet-asansor/lib/wow/wow.min.js"></script>
    <script src="~/vipnet-asansor/lib/easing/easing.min.js"></script>
    <script src="~/vipnet-asansor/lib/waypoints/waypoints.min.js"></script>
    <script src="~/vipnet-asansor/lib/counterup/counterup.min.js"></script>
    <script src="~/vipnet-asansor/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/vipnet-asansor/js/lightbox-plus-jquery.min.js"></script>
    <script src="~/js/lightbox-plus-jquery.min.js"></script>
    <script>
        lightbox.option({
            'resizeDuration': 200,
            'wrapAround': true,
            'alwaysShowNavOnTouchDevices':true
        })
    </script>


  
    <!-- Template Javascript -->
    <script src="~/vipnet-asansor/js/main.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    @* Resimleri galeri şeklinde düzenleyip kullanıcıların kolayca gezmesini sağlar. *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.js"></script>

    <script type="module" crossorigin src="https://panorama-slider.uiinitiative.com/assets/index.d2ce9dca.js"></script>
   
</body>

</html>