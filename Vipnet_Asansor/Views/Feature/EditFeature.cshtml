



@* Feature Güncelleme Sayfası Tasarımı *@

@model EntityLayer.Concrete.Feature

@{
    ViewData["Title"] = "EditFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Feature Düzenleme Sayfası</h3>
</div>
<br />


<form asp-action="EditFeature" method="post">
    <input type="hidden" asp-for="FeatureID" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Desciption" class="control-label"></label>
        <textarea asp-for="Desciption" class="form-control"></textarea>
        <span asp-validation-for="Desciption" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VideoUrl" class="control-label"></label>
        <textarea asp-for="VideoUrl" class="form-control"></textarea>
        <span asp-validation-for="VideoUrl" class="text-danger"></span>
    </div>


    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
</form>

