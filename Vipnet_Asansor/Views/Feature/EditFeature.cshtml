



@* Feature Güncelleme Sayfası Tasarımı *@

@model EntityLayer.Concrete.Feature

@{
    ViewData["Title"] = "EditFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Feature Düzenleme Sayfası</h3>
</div>
<br />


<form asp-action="EditFeature" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="FeatureID" />

    <!-- Dil Seçim Dropdown -->
    <div class="form-group">
        <label for="languageSelect">Dil Seçin:</label>
        <select id="languageSelect" name="Language" class="form-control">
            <option value="tr-TR">Türkçe</option>
            <option value="en-US">English</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <textarea asp-for="Title" class="form-control"></textarea>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Desciption" class="control-label"></label>
        <textarea asp-for="Desciption" class="form-control"></textarea>
        <span asp-validation-for="Desciption" class="text-danger"></span>
    </div>
 
    <div class="form-group">
        <label asp-for="Video_File" class="control-label"></label>
        <img src="/video/@Model.Video_File" width="100" height="100" alt="Image" />
        <input type="file" asp-for="Video_File" class="form-control">
        <span asp-validation-for="Video_File" class="text-danger"></span>
    </div>



    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
</form>

