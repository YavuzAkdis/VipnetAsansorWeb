@* Header Ekleme Sayfası Tasarımı *@

@model EntityLayer.Concrete.Header

@{
    ViewData["Title"] = "AddHeader";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Header Ekleme</h1>
<br />
<br />
<form asp-action="AddHeader" method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label"></label>
        <textarea asp-for="ImageUrl" class="form-control"></textarea>
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
 
    <div class="form-group">
        <label asp-for="P1" class="control-label"></label>
        <input asp-for="P1" class="form-control" />
        <span asp-validation-for="P1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="P2" class="control-label"></label>
        <input asp-for="P2" class="form-control" />
        <span asp-validation-for="P2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="P3" class="control-label"></label>
        <input asp-for="P3" class="form-control">
        <span asp-validation-for="P3" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="P4" class="control-label"></label>
        <input asp-for="P4" class="form-control">
        <span asp-validation-for="P4" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
</form>
