@* Header Listeleme Sayfası Tasarımı *@

@using EntityLayer.Concrete
@model List<Header>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="card-header border-0">
    <h3 class="mb-0">Header Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Title</th>
                <th scope="col" class="sort" data-sort="status">Name</th>
                <th scope="col" class="sort" data-sort="completion">Description</th>
                <th scope="col" class="sort" data-sort="budget">ImageUrl</th>
                <th scope="col" class="sort" data-sort="status">P1</th>
                <th scope="col" class="sort" data-sort="completion">P2</th>
                <th scope="col" class="sort" data-sort="budget">P3</th>
                <th scope="col" class="sort" data-sort="status">P4</th>
              
                <th scope="col">Sil</th>
                <th scope="col">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.HeaderID
                    </td>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Description
                    </td>

                    <td>
                        @item.ImageUrl
                    </td>

                    <td>
                        @item.P1
                    </td>

                    <td>
                        @item.P2
                    </td>

                    <td>
                        @item.P3
                    </td>

                    <td>
                        @item.P4
                    </td>
                    <td>
                        <a href="/Header/DeleteHeader/@item.HeaderID" class="btn btn-danger">Sil</a>
                    </td>
                    <td>
                        <a href="/Header/EditHeader/@item.HeaderID" class="btn btn-warning">Düzenle</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>

    <a href="/Header/AddHeader" class="btn btn-primary">Yeni Header Ekle </a>
</div>

