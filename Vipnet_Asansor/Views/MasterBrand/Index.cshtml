
@* Markalarımız Listeleme Sayfası Tasarımı *@

@using EntityLayer.Concrete
@model List<MasterBrand>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .fixed-table th, .fixed-table td {
        word-wrap: break-word; /* Uzun kelimeleri bölerek satır atlamasını sağlar */
        white-space: normal; /* Metnin birden fazla satıra yayılmasını sağlar */
        max-width: 300px; /* Description hücresinin maksimum genişliği */
    }
</style>

<div class="card-header border-0">
    <h3 class="mb-3">AnaMarkamız Tablosu</h3>
</div>

  <div class="form-group">
        <label for="languageSelect">Dil Seçin:</label>
        <select id="languageSelect" name="Language" class="form-control">
            <option value="tr-TR">Türkçe</option>
            <option value="en-US">English</option>
        </select>
    </div


<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush fixed-table">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Name</th>
                <th scope="col" class="sort" data-sort="status">Title</th>
                <th scope="col" class="sort" data-sort="status">Description</th>
                <th scope="col" class="sort" data-sort="completion">ImageUrl</th>
                <th scope="col" class="sort" data-sort="completion">Url</th>
                <th scope="col">Sil</th>
                <th scope="col">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.MasterBrandID
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        <img src="/img/@item.ImageUrl" width="100" height="100" alt="Image" />
                    </td>
                    <td>
                        @item.Url
                    </td>
                    <td>
                        <a href="/MasterBrand/DeleteMasterBrand/@item.MasterBrandID" class="btn btn-danger">Sil</a>
                    </td>
                    <td>
                        <a href="/MasterBrand/EditMasterBrand/@item.MasterBrandID" class="btn btn-warning">Düzenle</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>

    <a href="/MasterBrand/AddMasterBrand" class="btn btn-primary">Yeni AnaMarka Ekle </a>
</div>

