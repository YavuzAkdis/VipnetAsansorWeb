@* Partner Listeleme Sayfası Tasarımı *@

@using EntityLayer.Concrete
@model List<Partner>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-3">Partner Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Name</th>
                <th scope="col" class="sort" data-sort="status">Url</th>
                <th scope="col" class="sort" data-sort="completion">ImageUrl</th>
                <th scope="col">Sil</th>
                <th scope="col">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.PartnerID
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Url
                    </td>

                    <td>
                        <img src="/img/@item.ImageUrl" width="100" height="100" alt="Image" />
                    </td>
                    <td>
                        <a href="/Partner/DeletePartner/@item.PartnerID" class="btn btn-danger">Sil</a>
                    </td>
                    <td>
                        <a href="/Partner/EditPartner/@item.PartnerID" class="btn btn-warning">Düzenle</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>

    <a href="/Partner/AddPartner" class="btn btn-primary">Yeni Partner Ekle </a>
</div>

