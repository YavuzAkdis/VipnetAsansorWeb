@* Portfolio Listeleme Sayfası Tasarımı *@

@using EntityLayer.Concrete
@model List<Portfolio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .fixed-table th, .fixed-table td {
        word-wrap: break-word; /* Uzun kelimeleri bölerek satır atlamasını sağlar */
        white-space: normal; /* Metnin birden fazla satıra yayılmasını sağlar */
        max-width: 300px; /* Description hücresinin maksimum genişliği */
    }
</style>

<div class="card-header border-0">
    <h3 class="mb-0">Portfolio Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush fixed-table">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Name</th>
                <th scope="col" class="sort" data-sort="budget">Title</th>
                <th scope="col" class="sort" data-sort="budget">Description</th>
                <th scope="col" class="sort" data-sort="budget">P1</th>
                <th scope="col" class="sort" data-sort="budget">P2</th>
                <th scope="col" class="sort" data-sort="budget">P3</th>
                <th scope="col" class="sort" data-sort="budget">S1</th>
                <th scope="col" class="sort" data-sort="budget">SP1</th>
                <th scope="col" class="sort" data-sort="budget">S2</th>
                <th scope="col" class="sort" data-sort="budget">SP2</th>
      
            
                <th scope="col">Sil</th>
                <th scope="col">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.PortfolioID
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Title
                    </td>

                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.P1
                    </td>
                    <td>
                        @item.P2
                    </td>
                    <td>
                        @item.P3
                    </td>

                    <td>
                        @item.S1
                    </td>
                      <td>
                        @item.SP1
                    </td>
                      <td>
                        @item.S2
                    </td>
                      <td>
                        @item.SP2
                    </td>
                    <td>
                        <a href="/Portfolio/DeletePortfolio/@item.PortfolioID" class="btn btn-danger">Sil</a>
                    </td>
                    <td>
                        <a href="/Portfolio/EditPortfolio/@item.PortfolioID" class="btn btn-warning">Düzenle</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>

    <a href="/Portfolio/AddPortfolio" class="btn btn-primary">Yeni Portfolio Ekle </a>
</div>

