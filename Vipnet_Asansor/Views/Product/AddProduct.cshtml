@* ÜRÜN Ekleme Sayfası Tasarımı *@

@model EntityLayer.Concrete.Product

@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Ürün Ekleme</h1>
<br />
<br />
<form asp-action="AddProduct" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Url" class="control-label"></label>
        <input asp-for="Url" class="form-control" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <textarea asp-for="Title" class="form-control"></textarea>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Desciption" class="control-label"></label>
        <textarea asp-for="Desciption" class="form-control"></textarea>
        <span asp-validation-for="Desciption" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Desciption2" class="control-label"></label>
        <textarea asp-for="Desciption2" class="form-control"></textarea>
        <span asp-validation-for="Desciption2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Desciption3" class="control-label"></label>
        <textarea asp-for="Desciption3" class="form-control"></textarea>
        <span asp-validation-for="Desciption3" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Desciption4" class="control-label"></label>
        <textarea asp-for="Desciption4" class="form-control"></textarea>
        <span asp-validation-for="Desciption4" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsApproved" class="control-label"></label>
        <input asp-for="IsApproved" class="form-control" />
        <span asp-validation-for="IsApproved" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsHome" class="control-label"></label>
        <input asp-for="IsHome" class="form-control" />
        <span asp-validation-for="IsHome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="PImage_File">Resim 1:</label>
        <input type="file" id="PImage_File" name="PImage_File" class="form-control" />
    </div>
    <div class="form-group">
        <label for="PImage_File2">Resim 2:</label>
        <input type="file" id="PImage_File2" name="PImage_File2" class="form-control" />
    </div>
    <div class="form-group">
        <label for="PImage_File3">Resim 3:</label>
        <input type="file" id="PImage_File3" name="PImage_File3" class="form-control" />
    </div>
    <div class="form-group">
        <label for="PdfFile">PDF Dosyası:</label>
        <input type="file" id="PdfFile" name="PdfFile" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
</form>

