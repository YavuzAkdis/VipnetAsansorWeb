

@* ÜRÜNLERİN DETAY SAYFASI *@

@model EntityLayer.Concrete.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="about" class="about-area pt-110 pb-120 py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="about-title text-center wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.3s">

                    <h3 class="mb-2">@Model.Name</h3> 
                    <div class="border-bottom"></div>
                </div>
            </div>
        </div> <!-- row -->
        <div class="row align-items-center">
            <div class="col-lg-7 ">
                <div class="about-image  wow fadeInLeftBig " data-wow-duration="1s" data-wow-delay="0.5s">
                    <img class="img-fluid" src="~/img/@Model.PImageUrl" alt="Product Image" />
                </div> 
            </div>
            <div class="col-lg-5">
                <div class="about-content mt-50 wow fadeInRightBig" data-wow-duration="1s" data-wow-delay="0.5s">

                    <h5>Genel Bilgiler</h5>
                    <p class="mb-4">
                        @Model.Title
                    </p>
                    <p class="mb-4">
                        @Model.Desciption
                    </p>
                    <p class="mb-4">
                        @Model.Desciption2
                    </p>
                    @if (!string.IsNullOrEmpty(Model.PdfFileUrl))
                    {
                        <a href="@Url.Content("~/uploads/" + Model.PdfFileUrl)" target="_blank" class="btn btn-outline-primary">E Katalog</a> // E KATALOG Buton

                    }

                </div> 
            </div>
        </div> <!-- row -->
    </div> <!-- container -->
</section>

@if (!string.IsNullOrEmpty(Model.PImageUrl2))
{
    <section id="about" class="about-area pt-110 pb-120 py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 order-lg-1 order-2">
                    <div class="about-content mt-50 wow fadeInLeftBig" data-wow-duration="1s" data-wow-delay="0.5s">
                        <p class="mb-4">
                            @Model.Desciption3
                        </p>
                        <p class="mb-4">
                            @Model.Desciption4
                        </p>
                    </div>
                </div>
                <div class="col-lg-7 order-lg-2 order-1">
                    <div class="about-image mt-50 wow fadeInRightBig" data-wow-duration="1s" data-wow-delay="0.5s">
                        <img class="img-fluid" src="~/img/@Model.PImageUrl2" alt="Product Image 2" />
                    </div>
                </div>
            </div> <!-- row -->
        </div> <!-- container -->
    </section>
}

