


@* Reference Güncelleme Sayfası Tasarımı *@

@model EntityLayer.Concrete.Reference

@{
    ViewData["Title"] = "EditReference";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="card-header border-0">
    <h3 class="mb-0">Reference Düzenleme Sayfası</h3>
</div>
<br />

<form asp-action="EditReference" method="post">
    <input type="hidden" asp-for="ReferenceID" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label"></label>
        <textarea asp-for="ImageUrl" class="form-control"></textarea>
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
</form>

