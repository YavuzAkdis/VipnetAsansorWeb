@* GALERİ SAYFASINDA ARGE PARTİAL TASARIMI *@

@using EntityLayer.Concrete
@model List<Gallery>

<div class="section px-2 px-lg-4 pt-3" id="portfolio">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-3">
                    <a href="@Url.Content("~/img/" + item.ImageUrl)" data-lightbox="gallery" data-title="@item.Name">
                        <figure class="portfolio-item">
                            <img src="@Url.Content("~/img/" + item.ImageUrl)" class="img-fluid gallery-img shadow mb-3 rounded" alt="@item.Name" />
                            <figcaption class="text-center mt-2">
                                <div>@item.Title</div>
                            </figcaption>
                        </figure>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .gallery-img {
        width: 100%;
        height: 200px; /* İstediğiniz yükseklik */
        object-fit: cover; /* Resimleri kesmeden veya bozmadan sığdırır */
    }

    .portfolio-item {
        position: relative;
        overflow: hidden;
    }

    .portfolio-item img {
        transition: transform 0.3s ease;
    }

    .portfolio-item:hover img {
        transform: scale(1.1); /* Hover durumunda resimleri büyütür */
    }

    .figcaption {
        text-align: center;
        margin-top: 10px;
        font-weight: bold;
        font-size: 1.1em;
    }
</style>

<link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/js/lightbox.min.js"></script>



