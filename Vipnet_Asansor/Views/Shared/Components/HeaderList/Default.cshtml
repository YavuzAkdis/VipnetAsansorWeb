@* ANASAYFA DA HEADER TASARIMI *@


@using EntityLayer.Concrete
@model List<Header>


<div class="container-fluid  py-5">
    <div class="container">
        <div class="row g-5 align-items-center">

            @foreach(var item in Model)
            {
                 <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                    <div class="about-img shadow  mb-5 bg-body rounded" >
                        <img src="~/img/@item.ImageUrl" alt="Header Image" />
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">

                <h3 class="mb-4">@item.Name</h3>
                <p class="mb-4">
                    @item.Description
                </p>
              
                <div class="row g-3">
                    <div class="col-sm-6">
                        <h6 class="mb-3"><i class="fa fa-check text-primary me-2"></i>@item.P1</h6>
                            <h6 class="mb-0"><i class="fa fa-check text-primary me-2"></i>@item.P2</h6>
                    </div>
                    <div class="col-sm-6">
                            <h6 class="mb-3"><i class="fa fa-check text-primary me-2"></i>@item.P3</h6>
                            <h6 class="mb-0"><i class="fa fa-check text-primary me-2"></i>@item.P4</h6>
                    </div>
                </div>
                <div class="d-flex align-items-center mt-4">

                        @await Component.InvokeAsync("SocialMediaList")
                </div>
            </div>
            }


           
        </div>
    </div>
</div>