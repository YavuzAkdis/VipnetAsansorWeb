
@* ANASAYFADA PORTFOLİO (40 YILLIK...) TASARIMI *@

@using EntityLayer.Concrete
@model List<Portfolio>


<div class="container-fluid bg-primary feature pt-5">
    <div class="container pt-5">
        <div class="row g-5">
            <div class="col-lg-6 align-self-center mb-md-5 pb-md-5 wow fadeIn" data-wow-delay="0.3s">
                @foreach(var item in Model)
                {
                    <div class="btn btn-sm border rounded-pill text-white px-3 mb-3">
                        @item.Name
                    </div>
                    <h1 class="text-white mb-4">@item.Title</h1>
                    <p class="text-light mb-4">@item.Description</p>
                    <div class="d-flex align-items-center text-white mb-3">
                        <div class="btn-sm-square bg-white text-primary rounded-circle me-3">
                            <i class="fa fa-check"></i>
                        </div>
                        <span>@item.P1</span>
                    </div>
                    <div class="d-flex align-items-center text-white mb-3">
                        <div class="btn-sm-square bg-white text-primary rounded-circle me-3">
                            <i class="fa fa-check"></i>
                        </div>
                        <span>@item.P2</span>
                    </div>
                    <div class="d-flex align-items-center text-white mb-3">
                        <div class="btn-sm-square bg-white text-primary rounded-circle me-3">
                            <i class="fa fa-check"></i>
                        </div>
                        <span>@item.P3</span>
                    </div>
                    <div class="row g-4 pt-3">
                        <div class="col-sm-6">
                            <div class="d-flex rounded p-3" style="background: rgba(256, 256, 256, 0.1);">
                                <i class="fa fa-users fa-3x text-white"></i>
                                <div class="ms-3">
                                    <h2 class="text-white mb-0" data-toggle="counter-up">@item.S1</h2>
                               
                                    <p class="text-white mb-0">@item.SP1</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="d-flex rounded p-3" style="background: rgba(256, 256, 256, 0.1);">
                                <i class="fa fa-check fa-3x text-white"></i>
                                <div class="ms-3">
                                    <h2 class="text-white mb-0" data-toggle="counter-up">@item.S2</h2>
                                    <p class="text-white mb-0">@item.SP2</p>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
            <div class="col-lg-6 align-self-end text-center text-md-end wow fadeIn" data-wow-delay="0.5s">
                <!-- <img class="img-fluid" src="img/feature.png" alt=""> -->
            </div>
        </div>
    </div>
</div>
