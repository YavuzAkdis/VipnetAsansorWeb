@* SocialMedia Listeleme Sayfası Tasarımı *@

@using EntityLayer.Concrete
@model List<SocialMedia>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">SocialMedia Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="status">Name</th>
                <th scope="col" class="sort" data-sort="completion">Url</th>
                <th scope="col" class="sort" data-sort="budget">Icon</th>
                <th scope="col" class="sort" data-sort="status">Status</th>
          
                <th scope="col">Sil</th>
                <th scope="col">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.SocialMediaID
                    </td>
                   
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Url
                    </td>

                    <td>
                        @item.Icon
                    </td>

                    <td>
                        @item.Status
                    </td>

                    <td>
                        <a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-danger">Sil</a>
                    </td>
                    <td>
                        <a href="/SocialMedia/EditSocialMedia/@item.SocialMediaID" class="btn btn-warning">Düzenle</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>

    <a href="/SocialMedia/AddSocialMedia" class="btn btn-primary">Yeni SocialMedia Ekle </a>
</div>

